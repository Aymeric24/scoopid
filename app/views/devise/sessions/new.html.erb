<div class="container-fluid login-container" id="login-page">
  <h1 id="connection-title">Connectez vous</h1>
  <div class="container login-content">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" id="connection-signup">
      <%= f.button :submit, "Se Connecter", class: "button button-primary" %>
    </div>
  <% end %>
    <div id="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
