<div class="" style="overflow:scroll;">
  <div class="title-container d-flex align-items-center">
    <h3> Mes battues </h3>
  </div>
  <div class="mt-3">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <% @searchparties.each do |search_party| %>
          <div class="swiper-slide searchparties-card-index">
            <% if search_party.date > Time.now %>
              <h4> Battue à venir :</h4>
              <% else %>
              <h4> Battue terminée :</h4>
            <% end %>
            <div class="textleftcard">
              <p>Point de rencontre :<%= search_party.meeting_location %></p>
              <br>
              <p>Date :<%= search_party.date.strftime("%d/%m/%Y") %> </p>
              <p>Heure de RDV :<%= search_party.start_time.hour %>H<%= search_party.start_time.strftime("%M") %> </p>
              <p>Heure estimée de fin : <%= search_party.end_time.hour %>H<%= search_party.start_time.strftime("%M") %></p>
              <br>
              <p>Périmètre de la recherche : <%= search_party.radius %>km</p>
              <% if search_party.description != "" %>
                <hr>
                <p>Informations supplémentaires : <br>
                <%= search_party.description %> </p>
              <% end %>
              <br>
              <div class="text-center d-flex align-items-end justify-content-center">
                <%= link_to "Voir les parcours", search_party_search_party_attendancies_path(search_party), class: "button-primary-alt" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
  <div class="button-index-search">
    <%= link_to "Créer une Battue", new_search_party_path, class: "button button-primary" %>
  </div>
</div>
<!-- Swiper JS -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper('.swiper-container', {
    pagination: {
      el: '.swiper-pagination',
      type: 'bullets',
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>
