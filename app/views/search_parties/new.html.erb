<div class="container-fluid" id="searchparty-new">
  <div class="container form text-center col-md-6">
    <h1 class="form-title">Nouvelle Battue</h1>
    <%= simple_form_for [@search_party] do |f| %>
      <%= f.input :start_date_time, label:"Date et Horaire de début" %>
      <%= f.input :end_date_time, label:"Date et Horaire de fin" %>
      <%= f.input :meeting_location, label:"Lieu de Rendez-vous"  %>
      <%= f.input :description %>
      <%= f.input :radius %>
      <div class="form-actions d-flex align-items-center flex-column" id="searchparty-create">
        <%= f.button :submit, "Créer une battue", class: "button button-primary" %>
      </div>
    <% end %>
  </div>
  <div class="retractable-card">
    <div class="up-down-icon">
      <i class="fas fa-chevron-down" id="arrow-down-retractable"></i>
    </div>
    <div class="card-content d-flex align-items-center justify-content-around">
      <i class="fas fa-angle-left slide-arrows"></i>
      <div class="text-card">
        <h6>Battue du 20 Janvier 2018</h6>
        <p>Vue Globale</p>
      </div>
      <i class="fas fa-angle-right slide-arrows"></i>
    </div>
    <div class="card-button d-flex align-items-center flex-column" id="card-button-display">
      <a href="#" class="button button-secondary" id="publish-info">Publier une information <i class="fas fa-paper-plane"></i></a>
    </div>
  </div>
</div>
