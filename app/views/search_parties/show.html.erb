<div class="container-fluid" id="searchparty-show">
  <div class="title-container d-flex align-items-center">
    <h3> Ma Battue </h3>
  </div>
    <div class="mt-3">
    <div class="">
      <div class="container searchparties-card-show searchparties-card-edit-show" id="searchparties-card-index">
        <div class="textleftcard">
          <div id="date-time-info-card" style="margin-top:20px;">
              <h4><p>🗓 Date : <strong><%= @search_party.date.strftime("%d/%m/%Y") %></strong></p></h4>
              <p>🕒 Heure de RDV : <strong><%= @search_party.start_time.hour %>H<%= @search_party.start_time.strftime("%M") %></strong></p>
              <p>🕘 Heure estimée de fin : <strong><%= @search_party.end_time.hour %>H<%= @search_party.start_time.strftime("%M")%></strong></p>
          </div>
          <div id="date-time-info-card" style="margin-top:30px;background-color:white;">
            <div class="d-flex justify-content-start">
              <p>📍</p>
              <p>Point de rencontre : </br><strong><%= @search_party.meeting_location %></strong></p>
            </div>
            <% if @search_party.description != "" %>
            <hr>
            <p>💬 Informations supplémentaires : <br>
            <%= @search_party.description %> </p>
            <% end %>
          </div>
        </div>
      </div>
      </div>
      <div style="margin-top:10%">
        <div class="button" style="width:300px; margin:0 auto;">
          <%= link_to "Modifier", edit_search_party_path(@search_party), class:"diffuse button button-primary-alt" %>
        </div>
          <br>
        <div class="button" style="width:300px; margin:0 auto;margin-top:50%;">
          <%= link_to "Vos battues", lost_person_search_parties_path(@search_party), class:"button button-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
