<%# <% if policy(SearchParty).create? %>
  <%#= link_to "New Search Party", new_searchparty_path %>
<%# end %>
  <div class="container form text-center col-md-6 mt-3">
    <div class="title-container">
      <h3>Nouvelle battue</h3>
    </div>
    <%= simple_form_for [@search_party] do |f| %>
      <div id="accordion">
        <div class="card">
          <div class="card-header" id="headingOne">
            <h5 class="mb-0">
              <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Date & Jour*
              </button>
            </h5>
          </div>
          <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
              <%= f.input :date, label:"Date de la battue", as: :string, required: false, input_html: {class: "datepicker"} %>
              <div class="form-row">
                <div class="col">
                  <%= f.input :start_time, label:"Horaire de début",  as: :string, required: false, input_html: {class: "hourpicker"} %>
                </div>
                <div class="col">
                  <%= f.input :end_time, label:"Horaire de fin",  as: :string, required: false, input_html: {class: "hourpicker"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                Lieu de Rendez-Vous*
              </button>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
              <%= f.input :meeting_location, input_html: { id: "search_address"}, label:"Lieu de Rendez-vous", placeholder: "Entrez ici l'adresse de rendez-vous"%>
              <%= f.input :radius, label:"Périmètre de recherche (km)" %>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingThree">
            <h5 class="mb-0">
              <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                Informations supplémentaires
              </button>
            </h5>
          </div>
          <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
            <div class="card-body">
              <%= f.input :description, label:"Détails" , placeholder: 'Avez-vous des informations supplémentaires à communiquer?' %>
            </div>
          </div>
        </div>
      <%#= f.input :radius, as: :range, label:"Périmètre de recherche ", input_html: { class: "custom-range", min: "0", max: "5", step: "0.5" }, collection: [[1, "1km"], [2, "2km"]] %>
      </div>
      <div class="form-actions d-flex align-items-center flex-column" id="searchparty-create">
        <%= f.button :submit, "Créer une battue", class: "button button-primary" %>
      </div>
    <% end %>
  </div>
