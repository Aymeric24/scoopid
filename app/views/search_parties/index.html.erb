<div class="" style="overflow:scroll;">
  <div class="title-container d-flex align-items-center">
    <h3> Mes battues </h3>
  </div>
  <div class="mt-3">
    <% @searchparties.each do |search_party| %>
      <div class="container searchparties-card-index">
          <% if search_party.date > Time.now %>
            <h4> Battue à venir :</h4>
            <% else %> 
            <h4> Battue terminée :</h4>
          <% end %>
        <div class="textleftcard">
          <p>Point de rencontre :<%= search_party.meeting_location %></p>
          <br>
          <p>Date :<%= search_party.date.strftime("%d/%m/%Y") %> </p>
          <p>Heure de RDV :<%= search_party.start_time.hour %>H<%= search_party.start_time.strftime("%H") %> </p>
          <p>Heure estimée de fin : <%= search_party.end_time.hour %>H<%= search_party.start_time.strftime("%H") %></p>
          <br>
          <p>Périmètre de la recherche : <%= search_party.radius %>km</p>
          <% if search_party.description != "" %> 
            <hr>
            <p>Informations supplémentaires : <br>
            <%= search_party.description %> </p>
          <% end %>
          <br>
          <div class="text-center mb-3">
            <%= link_to 'Voir les parcours', search_party_search_party_attendancies_path(search_party), class:"button-primary-alt" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @searchparties.any? %>
    <%= link_to new_search_party_path do %>
     <i class="fas fa-plus-circle" id="fixed-button" ></i> 
    <% end %>
  <% else %>
      <%= link_to "Créer une Battue", new_search_party_path, class: "button button-primary fixed-bottom", style: "margin:0 auto;", id: "button-new-searchparty-big" %>
  <% end %>
</div>
